{
  "user_id": {
    "description": "Discord 用户 ID",
    "type": "string",
    "hint": "你的 Discord 用户 ID，用于获取活动状态"
  },
  "qq_groups": {
    "description": "QQ 群号列表",
    "type": "list",
    "hint": "[群号1, 群号2, ...] 或逗号分隔的群号列表",
    "default": []
  },
  "lanyard_api_key": {
    "description": "Lanyard KV API Key",
    "type": "string",
    "hint": "（暂未实装）可选，仅在使用 Lanyard KV 时需要填写。通过 DM Lanyard Bot 发送 .apikey 获取"
  },
  "enable_activities": {
    "description": "启用的活动类型",
    "type": "list",
    "hint": "活动类型编号列表：0=游戏, 1=流媒体, 2=听音乐, 3=观看, 4=自定义状态, 5=竞争。空列表 [] 表示启用所有类型",
    "default": []
  },
  "filter_config": {
    "description": "活动信息过滤配置",
    "type": "object",
    "hint": "控制哪些应用和字段应该被排除显示",
    "items": {
      "exclude_app_ids": {
        "type": "list",
        "description": "要排除的应用ID列表",
        "default": []
      },
      "app_field_filters": {
        "type": "list",
        "description": "应用字段过滤器",
        "hint": "为每个应用指定要过滤的字段；形如 [{\"app_id\": \"xxxx\", \"filtered_fields\": [\"large_text\", \"state\"]}]",
        "default": [],
        "items": {
          "type": "object",
          "items": {
            "app_id": {
              "type": "string",
              "description": "Discord 应用 ID",
              "hint": "要过滤的应用 ID"
            },
            "filtered_fields": {
              "type": "list",
              "description": "要过滤的字段列表",
              "hint": "例如: ['large_text', 'state', 'details']",
              "default": [],
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
